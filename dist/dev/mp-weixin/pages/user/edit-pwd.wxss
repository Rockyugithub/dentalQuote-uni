.form-container {
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
}
.form-container .form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.form-container .form-header .title {
  font-size: 36rpx;
  font-weight: bold;
}
.form-container .current-user {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #eee;
}
.form-container .current-user .role-tag {
  margin-left: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}
.form-container .current-user .role-tag.admin {
  background: #e6f7ff;
  color: #1890ff;
}
.form-container .current-user .role-tag.user {
  background: #f6ffed;
  color: #52c41a;
}
.form-container .form-body .form-item {
  margin-bottom: 30rpx;
}
.form-container .form-body .form-item .label {
  display: block;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #666;
}
.form-container .form-body .form-item .input {
  width: 90%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.form-container .submit-btn {
  margin-top: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(90deg, #4a90e2, #5aa0ff);
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
}