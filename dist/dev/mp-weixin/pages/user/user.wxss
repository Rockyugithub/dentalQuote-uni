.user-management {
  padding: 20rpx;
}
.user-management .action-bar {
  margin-bottom: 20rpx;
}
.user-management .action-bar .add-btn {
  background-color: #4a90e2;
  color: white;
}
.user-management .user-list .user-card {
  background: white;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}
.user-management .user-list .user-card .user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.user-management .user-list .user-card .user-info .username {
  font-weight: bold;
  margin-bottom: 10rpx;
}
.user-management .user-list .user-card .user-info .password, .user-management .user-list .user-card .user-info .role {
  font-size: 24rpx;
  color: #666;
}
.user-management .user-list .user-card .user-actions {
  display: flex;
  align-items: center;
}
.user-management .user-list .user-card .user-actions button {
  margin-left: 10rpx;
}
.user-management .user-list .user-card .user-actions button[disabled] {
  opacity: 0.5;
}

/* 强制覆盖微信样式 */
uni-popup-dialog {
  z-index: 99999 !important;
  position: fixed !important;
}

/* 隐藏背景遮罩层 */
.uni-popup__wrapper.uni-popup__wrapper--mask {
  display: none !important;
}